function full_install() {
  # clone config files to home

  if [[ ! -d "$HOME/config-files" ]]; then
    git clone https://github.com/ParamagicDev/config-files.git $HOME
  fi

  cd $HOME/config-files
  bash setup.bash

  cd $HOME

  source_shell

  # use version managers
  add_new_ruby "2.6.2"

  source_shell

  gem install kubs_cli
  kubs install_dependencies

  source_shell

  kubs install_packages

  source_shell
}

function source_shell() {
  source $HOME/.zshrc
}
