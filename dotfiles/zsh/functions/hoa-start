function hoa-start() {
  tmux new-session -s "hoalife" \; \
  send-keys "vim ." C-m \; \
  new-window -n "cli" \; \
  send-keys "bundle install && yarn install --check-files" \; \
  new-window -n "server" \; \
  send-keys "bundle exec rails server" \; \
  split-window -h \; \
  send-keys "./bin/webpack-dev-server" \; \
  split-window -v \; \
  send-keys "docker-compose up" \; \
  split-window -v \; \
  send-keys "bundle exec sidekiq -C config/sidekiq.yml" \; \
  new-window -n "localtunnel" \; \
  send-keys "ngrok start --config ngrok.yml rails" \; \
  split-window -h \; \
  send-keys "ngrok start --config ngrok.yml portal" \; \
  split-window -v \; \
  send-keys "ngrok start --config ngrok.yml inspector" \; \
  split-window -v \; \
  send-keys "ngrok start --config ngrok.yml violation"
}
